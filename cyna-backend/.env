# Base de donn√©es (PostgreSQL exemple)
# !! REMPLACEZ CECI PAR VOTRE VRAIE URL DE BASE DE DONNEES !!
DATABASE_URL="postgresql://user:password@localhost:5432/cynadb?schema=public"

# Port du serveur
PORT=5001

# Secret pour les tokens JWT
# !! CHANGEZ CES VALEURS POUR DES CHAINES LONGUES ET ALEATOIRES !!
JWT_SECRET="REMPLACEZ_MOI_SECRET_JWT_$(date +%s)_$(openssl rand -hex 16)"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="REMPLACEZ_MOI_SECRET_REFRESH_$(date +%s)_$(openssl rand -hex 24)"
JWT_REFRESH_EXPIRES_IN="7d"

# Configuration CORS (Adaptez aux URLs de vos frontends en dev/prod)
CORS_ORIGIN=["http://localhost:8081","http://localhost:5173"]

